{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "declaration": true
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "dist"
    ]
}
