{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"skipLibCheck": true
	},

	"include": ["src/*"]
}
