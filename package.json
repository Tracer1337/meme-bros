{
  "name": "meme-bros",
  "version": "1.0.0",
  "private": true,
  "author": "Tracer1337 <merlin.moelter@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "node patch-packages.js",
    "build": "yarn turbo run build",
    "dev": "yarn turbo run dev --parallel --no-cache"
  },
  "workspaces": {
    "packages": [
      "api/admin",
      "api/public",
      "api-lib",
      "app",
      "canvas",
      "client-lib",
      "core/types",
      "mobile",
      "web/admin"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-web"
    ]
  },
  "devDependencies": {
    "turbo": "^1.0.28"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
